
{% extends 'base-dashboard.html.twig' %}

{% block title %}Users{% endblock %}


{% block sidemenu %}

    <div class="btn-group-vertical d-block" role="group" aria-label="Vertical button group">
        <a class="btn btn-dark btn-sm p-2 text-start" href="/dashboard">{% trans %}Return{% endtrans %}</a>
    </div>

{% endblock %}


{% block body %}

<div class="row">

    <div class="col-xl-4 py-2 bg-dark text-light">
        {% trans %}Name{% endtrans %}
    </div>

    <div class="col-xl-2 py-2 bg-dark text-light">
        {% trans %}Date of registration{% endtrans %}
    </div>

    <div class="col-xl-2 py-2 bg-dark text-light">
        {% trans %}Country{% endtrans %}
    </div>

    <div class="col-xl-2 py-2 bg-dark text-light">
        {% trans %}Email{% endtrans %}
    </div>

    <div class="col-xl-2 py-2 bg-dark text-light">
        {% trans %}Phone{% endtrans %}
    </div>

</div>

{% for user in users %}

<div class="row border-bottom">

    <div class="col-xl-4 py-2">
        <a href="/dashboard/users/user?id={{ user.id }}" class="text-danger">{{ user.lastName }} {{ user.firstName }}</a>
    </div>

    <div class="col-xl-2 py-2">
        {{ user.dateOfRegistration | date('d.m.Y') }}
    </div>

    <div class="col-xl-2 py-2">
        {{ countries[user.country] }}
    </div>

    <div class="col-xl-2 py-2">
        {{ user.email }}
    </div>

    <div class="col-xl-2 py-2">
        {{ user.phone }}
    </div>

</div>

{% endfor %}

{% endblock %}